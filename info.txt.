#include <iostream>
using namespace std;

int main() {
    
    double a,b,c;

    cout << "Enter three numbers: ";
    cin >> a >> b >> c;

    // check if a is the largest number
    if(a >= b && a >= c)
        cout << "Largest number: " << a;

    // check if b is the largest number
    else if(b >= a && b >= c)
        cout << "Largest number: " << c;
    
    // if neither a nor b are the largest, c is the largest
    else 
        cout << "Largest number: " << c;
  //if all numbers are equal then it will an error
    return 0;
}
